#!/bin/bash  

# install other versions
# wget -q --show-progress --https-only --timestamping \
# https://get.helm.sh/helm-v3.0.0-alpha.2-darwin-amd64.tar.gz
# tar xzf helm-v3.0.0-alpha.2-darwin-amd64.tar.gz
# chmod 744 darwin-amd64/helm && mv darwin-amd64/helm /usr/local/bin/helm-v3.0.0-alpha.2

HELM_COMMAND=/usr/local/bin/helm-v3.0.0-alpha.2
[[ -z "$KUBECTL_CONTEXT" ]] && KUBECTL_CONTEXT=$(cat ~/.kube/config | grep "current-context:" | sed "s/current-context: //")

exec $HELM_COMMAND --kube-context $KUBECTL_CONTEXT "$@"